<div class="mt-5">
  <div class="container">
    <h3 class="text-warning">Tap to see a Homie's Profile!</h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="justify-content-center">
        <% @users.each do |user| %>
            <div class="card-user">
              <%= link_to user, class: "text-decoration-none justify-content-center h-100" do %>
                <%= cl_image_tag user.photo.key, class: "card-user-img" %>
              <% end %>
              <div class="card-user-infos">
                <h3><%= user.first_name %></h3>
                <p><%= user.description %></p>
                <%= button_to participation_path(user_id: user.id), class: "btn btn-blue" do %>
                  <i>Start a conversation!</i>
                <% end %>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</div>

<style>
body {
  background-image: url("images/logo_naranja.png")
}
</style>
